---
import BaseHead from "../../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import NavigationSidebar from "../../components/NavigationSidebar/index.astro";

const posts = (await getCollection("javascript")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
        filter: brightness(1);
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 2px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: var(--accent-dark);
        line-height: 1;
      }
      .date {
        margin: 0;
        color: var(--text-dark);
      }
      ul li a:hover h4 {
        color: var(--accent);
      }
      ul li a:hover .date {
        color: var(--text-light);
      }
      ul a:hover img {
        /* box-shadow: var(--box-shadow); */
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
      .main-window {
        background-color: var(--main-dark);
        min-height: 100vh;
        width: 100%;
      }
    </style>
  </head>
  <body class="pl-[47px]">
    <NavigationSidebar />
    <div class="main-window">
      <main>
        <section>
          <ul>
            {
              posts.map((post) => (
                <li>
                  <a href={`/javascript/${post.slug}/`}>
                    <img
                      width={720}
                      height={360}
                      src={post.data.heroImage}
                      alt=""
                      class="brightness-75 hover:brightness-110"
                    />
                    <h4 class="title">{post.data.title}</h4>
                    <p class="date">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                  </a>
                </li>
              ))
            }
          </ul>
        </section>
      </main>
    </div>
  </body>
</html>
