---
const { label, path, viewBox, isHighlighted } = Astro.props;

const highlighted1 =
  "group w-12 md:w-full h-12 grid place-content-center bg-neutral-700 relative before:absolute before:top-0 before:inset-x-0 before:h-0.5 md:before:w-0.5 md:before:h-full before:bg-neutral-200";
const highlighted2 = "w-7 h-7 opacity-90";

const normal1 = "group w-full h-12 grid place-content-center relative";
const normal2 = "w-7 h-7 opacity-40 group-hover:opacity-90";
---

<a href=`/${path}`>
  <button class={isHighlighted ? highlighted1 : normal1}>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox=`${viewBox}`
      stroke-width="1.6"
      stroke="#ffffff"
      class={isHighlighted ? highlighted2 : normal2}
    >
      <slot />
    </svg>

    <span
      class="tooltiptext px-2 py-0.5 border border-[#30363d] bg-[#0d1117] text-sm text-white/75 rounded-[3.2px] top-1/2 -translate-y-1/2 left-[51px] select-text selection:text-white"
      >{label}</span
    >
  </button>
</a>

<style>
  button .tooltiptext::after {
    content: "";
    position: absolute;
    top: 50%;
    right: 100%;
    margin-top: -4px;
    border-width: 4px;
    border-color: transparent #0d1117 transparent transparent;
  }
  button .tooltiptext::before {
    content: "";
    position: absolute;
    top: 50%;
    right: 100%;
    margin-top: -6px;
    border-width: 6px;
    border-color: transparent #30363d transparent transparent;
  }
  button:hover .tooltiptext {
    visibility: visible;
  }
  button .tooltiptext {
    visibility: hidden;
    position: absolute;
    z-index: 1;
  }
</style>
