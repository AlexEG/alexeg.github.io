---
import NavigationSidebar from "../components/NavigationSidebar.astro";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const title = "Dashbaord";
const description = "Dashbaord for all related info about me.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Font preloads -->
    <link
      rel="preload"
      href="/fonts/atkinson-regular.woff"
      as="font"
      type="font/woff"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/atkinson-bold.woff"
      as="font"
      type="font/woff"
      crossorigin
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
  </head>

  <body class="pl-[47px]">
    <NavigationSidebar HighlightedSectionName="dashboard" />
    <div class="w-full min-h-screen bg-neutral-950 py-10">
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
